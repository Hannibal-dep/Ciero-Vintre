  <script>
  // EVENTOS ADICIONAIS DO PIXEL - ADICIONE ESTE CÓDIGO
  document.addEventListener('DOMContentLoaded', function() {
    
    // Rastrear quando usuário assiste o vídeo por 30 segundos
    setTimeout(function() {
      fbq('track', 'ViewContent', {
        content_name: 'Protocolo Ciero Vientre',
        content_category: 'Video'
      });
    }, 30000);

    // Rastrear quando usuário rola a página (interesse)
    window.addEventListener('scroll', function() {
      if (window.scrollY > 500) {
        fbq('track', 'Lead');
      }
    });

  });
  </script>

